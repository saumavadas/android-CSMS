<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bondActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/viewthe_barcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/viewthe_barcode"
                android:inputType="number"/>


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Customer's Name:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editCustomerName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editCustomerName"
                android:hint=""
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Address:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editAddress"
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="City/Vallage:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editCity"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editDistrict"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Agent:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editDistrict"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editDistrict"
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="State:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editState"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editDistrict"
                android:inputType="textPersonName" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Post Office:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editPostOfficeCode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editState"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Gate Sl:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPIN"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editState"
                android:inputType="number" />

            <!--<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contact No:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editContactNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editContactNo"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="AADHAAR:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editAADHAAR"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editAADHAAR"
                android:inputType="textPersonName" />-->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Test Weight:(Kg)"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editTestWeight1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editTestWeight1"
                android:hint="50"
                android:inputType="number" />
            <EditText
                android:id="@+id/editTestWeight2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editTestWeight2"
                android:hint="50"
                android:inputType="number" />

            <EditText
                android:id="@+id/editTestWeight3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editTestWeight3"
                android:hint="50"
                android:inputType="number" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Quality:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editQuality"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editQuality"
                android:inputType="textPersonName" />

            <!--<TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Private Marks:"
                android:textSize="17sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editPrivateMarks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editPrivateMarks"
                android:inputType="textPersonName" />-->

            <TextView
                android:id="@+id/txtShadePosition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Shade Position:*"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editShadePosition"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editShadePosition"
                android:hint="required"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Vehicle #	:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editVehicleNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editVehicleNo"
                android:inputType="textPersonName" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Remarks:"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editRemarks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editRemarks"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/txtPacket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Packet:*"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPacket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editPacket"
                android:hint="Required"
                android:inputType="number" />

            <TextView
                android:id="@+id/txtCPacket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Packet:*"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editConfirmPacket"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/editConfirmPacket"
                android:hint="Required"
                android:inputType="number" />

            <Button
                android:id="@+id/submit_form"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="Submit"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>