<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayActivity">





    <ScrollView android:layout_marginTop="0dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/print_form"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Print data"
                android:textSize="18sp" />

            <Button
                android:id="@+id/print_update"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Print and update"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backScanPage"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Back to scan page"
                android:textSize="18sp" />




            <TextView
                android:id="@+id/txtHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joy Mahaprovu Cold Storage(P) LTD"
                android:textAlignment="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/txtCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtCityVillage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPostOfficeCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Office"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="District"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIN"
                android:textSize="18sp" />


            <!--TextView
            android:id="@+id/txtContactNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ContactNo"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtAADHAAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AADHAAR"
            android:textSize="18sp" /-->

            <TextView
                android:id="@+id/txtTestWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TestWeight1"
                android:textSize="18sp" />

            <!--TextView
            android:id="@+id/txtTestWeight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestWeight2"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTestWeight3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TestWeight3"
            android:textSize="18sp" /-->

            <TextView
                android:id="@+id/txtQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quality"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtShadePosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ShadePosition"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtVehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VehicleNo"
                android:textSize="18sp" />

            <!--TextView
            android:id="@+id/txtPrivateMarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PrivateMarks"
            android:textSize="18sp" /-->

            <TextView
                android:id="@+id/txtRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remarks"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtPacket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Packet"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/barcode_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>